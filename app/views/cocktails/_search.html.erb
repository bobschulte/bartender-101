<div class="input-group">
  <form class="navbar-form navbar-left" action="<%= cocktails_path %>" >
    <input type="text" name="search" id="search" class="form-control" placeholder="Search Cocktails">
    <button type="submit" class="btn btn-default">
      <i class="glyphicon glyphicon-search"></i>
    </button>
  </form>
</div>


<%= form_tag(cocktails_path, :method => "get", id: "search-form") do %>
  <%= label_tag "Search by Cocktail Name" %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Search", :name => nil %>
<% end %>
