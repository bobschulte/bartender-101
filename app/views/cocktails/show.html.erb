<h1><%= @cocktail.name %> </h1>

<% if flash[:notice] %>
  <%= flash[:notice] %>
<% end %>
<br><br>

<%= image_tag(@cocktail.img_url, size: "100x100") %><br>
<p><%=@cocktail.glass_type %></p>
<ul>
<% @cocktail.cocktail_ingredients.each do |cocktail_ingredient|%>
<li><%= cocktail_ingredient.measurement %> <%= link_to cocktail_ingredient.ingredient.name, cocktail_ingredient.ingredient%></li>
<% end %>
</ul>
<p><%=@cocktail.instructions%></p>

<%= link_to "Edit Cocktail", edit_cocktail_path(@cocktail) %>
<br><br>
<%= link_to "Delete Cocktail", cocktail_path(@cocktail), method: "delete" %>
<br><br>
<%= link_to "Back to All Cocktails", cocktails_path %>
